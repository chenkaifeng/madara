<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE generatorConfiguration  
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"  
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">  
<generatorConfiguration>
	
	<!-- 加载配置文件，resource:从classpath下加载 -->
	<!-- <properties resource="config/jdbc.properties" /> -->
	
    <context id="default"  targetRuntime="MyBatis3" defaultModelType="flat">
    	<!-- 生成的Java文件的编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 生成文件的comment配置,通过type指定具体实现类 -->
        <commentGenerator type="org.szfs.basic.mybatis.CommentGenerator">
          	<!-- 是否去除时间标志 true-去除 -->
            <property name="suppressDate" value="true"/>  
            <!-- 是否去除自动生成的注释 true-去除 -->
            <property name="suppressAllComments" value="true"/>  
            <!-- 是否添加字段comment false-添加 -->
            <property name="addRemarkComments" value="false"/>        
        </commentGenerator>  
        <!-- 数据库连接信息 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://168.33.131.161:8066/ewallet_logic" userId="ewallet" password="123456"/> 
        
        <!-- java类型处理器 -->
        <javaTypeResolver>  
        	<!--
        		是否强制使用BigDecimal对应数据库的DECIMAL和NUMERIC数据类型
				true:是
				false(默认): 否，根据精度(scale)和长度(length)判断
					scale>0 || length>18:使用BigDecimal
					scale=0 && length[10,18]:使用Long
					scale=0 && length[5,9]:使用Integer
					scale=0 && length<5:使用Short
			-->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>  
        
        <!-- 生成领域对象的包名和位置 -->
        <javaModelGenerator targetPackage="com.keiver.madara.common.domain" targetProject="../ewallet-common/src/main/java">
            <property name="enableSubPackages" value="true"/>  
            <!-- 是否在getter方法中对String类型字段调用trim()方法 true-是 -->
            <property name="trimStrings" value="true"/>  
        </javaModelGenerator>  
        
        <!-- 生成mapping文件的包名和位置 -->
        <sqlMapGenerator targetPackage="mapping" targetProject="src/main/resources">  
            <property name="enableSubPackages" value="true"/>  
        </sqlMapGenerator>
        
        <!-- 生成DAO的包名和位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.keiver.madara.common.dao" targetProject="../ewallet-common/src/main/java">
            <property name="enableSubPackages" value="true"/>  
        </javaClientGenerator>  
		
		<!-- 生成表 -->
		<table tableName="check_merchant_daily_clear" enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false">
			<columnOverride column="TRADE_AMOUNT" javaType="com.keiver.madara.common.util.Money"></columnOverride>
			<columnOverride column="REFUND_AMOUNT" javaType="com.keiver.madara.common.util.Money"></columnOverride>
			<columnOverride column="CLEAR_AMOUNT" javaType="com.keiver.madara.common.util.Money"></columnOverride>
		</table> 
		
    </context>  
</generatorConfiguration>